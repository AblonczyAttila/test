<Page x:Class="AdminPanel.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UsersPage" Height="450" Width="800">

    <Grid Background="#1E1E2E">
        <!-- Back Button -->
        <Button Content="Back"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Padding="10,5"
                FontSize="12"
                FontWeight="SemiBold"
                Background="#CBA6F7"
                Foreground="#1E1E2E"
                BorderThickness="0"
                Cursor="Hand"
                Click="Back_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#CBA6F7"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#B493F4"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#9D7BEF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Header -->
        <TextBlock Text="User List" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Margin="0,50,0,0"
                   FontSize="24"
                   Foreground="#CDD6F4"/>

        <!-- List of Users -->
        <ListView x:Name="UsersListView"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="700"
                  Background="#313244"
                  BorderBrush="#585B70"
                  BorderThickness="1"
                  Foreground="#CDD6F4">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding UserID}" Width="50"/>
                    <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}" Width="120"/>
                    <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}" Width="120"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>
                    <GridViewColumn Header="Role" DisplayMemberBinding="{Binding Role}" Width="100"/>
                    <GridViewColumn Header="Created At" DisplayMemberBinding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="100"/>
                    <GridViewColumn Header="Active" DisplayMemberBinding="{Binding IsActive}" Width="60"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>