<Page x:Class="AdminPanel.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Dashboard" Height="450" Width="800">

    <Grid Background="#1E1E2E">

        <TextBlock Text="Welcome to the Dashboard!" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   Margin="0,50,0,0"
                   FontSize="24"
                   Foreground="#CDD6F4"/>


        <Button Content="View Users"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Padding="20,12"
                FontSize="14"
                FontWeight="SemiBold"
                Background="#CBA6F7"
                Foreground="#1E1E2E"
                BorderThickness="0"
                Cursor="Hand"
                Click="ViewUsers_Click" Margin="0,87,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#CBA6F7"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#B493F4"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#9D7BEF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>