<Page x:Class="AdminPanel.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Dashboard"
      FontFamily="Open Sans"
      Background="#2A2A3F">
    <!-- Matching quick stats background -->

    <Page.Resources>
        <!-- Button Style for Dashboard Buttons -->
        <Style x:Key="DashboardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#CBA6F7"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <!-- Set a fixed height for uniformity -->
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                            To="#B493F4" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                            To="#9D7BEF" Duration="0:0:0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Responsive Arrow Icon Style -->
        <Style x:Key="ArrowIconStyle" TargetType="Path">
            <Setter Property="Fill" Value="#1E1E2E"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0" Y="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform X="4" Y="0"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Quick Stats Cells -->
        <Style x:Key="StatsCellStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E2E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252538"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#2A2A3F">
        <!-- Matching background -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel Orientation="Vertical" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       MaxWidth="800"
                       Margin="0,20,0,20">
                <!-- Added vertical margin -->

                <!-- Header -->
                <TextBlock Text="Welcome to the Dashboard!" 
                           HorizontalAlignment="Center" 
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#CDD6F4"
                           Margin="0,0,0,30"/>

                <!-- Buttons - Now in a uniform grid for better scaling -->
                <UniformGrid Columns="1" HorizontalAlignment="Stretch" Margin="0,0,0,30">
                    <!-- View Users Button -->
                    <Button Style="{StaticResource DashboardButtonStyle}" 
                            Click="ViewUsers_Click"
                            Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="View Users" Margin="0,0,10,0"/>
                            <Path Style="{StaticResource ArrowIconStyle}"
                                  Data="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                  Width="16" Height="16" Stretch="Uniform"/>
                        </StackPanel>
                    </Button>

                    <!-- Manage Employer Requests Button -->
                    <Button Style="{StaticResource DashboardButtonStyle}" 
                            Click="ManageRequests_Click"
                            Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Manage Employer Requests" Margin="0,0,10,0"/>
                            <Path Style="{StaticResource ArrowIconStyle}"
                                  Data="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                  Width="16" Height="16" Stretch="Uniform"/>
                        </StackPanel>
                    </Button>

                    <!-- View Posts Button -->
                    <Button Style="{StaticResource DashboardButtonStyle}" 
                            Click="ViewPosts_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="View Posts" Margin="0,0,10,0"/>
                            <Path Style="{StaticResource ArrowIconStyle}"
                                  Data="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                  Width="16" Height="16" Stretch="Uniform"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>

                <!-- Quick Stats -->
                <Border Background="#313244" 
                        CornerRadius="12" 
                        Padding="20"
                        HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Stats" 
                                   FontSize="18" 
                                   FontWeight="Medium"
                                   Foreground="#CBA6F7" 
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                        <UniformGrid Grid.Row="1" Columns="3" HorizontalAlignment="Stretch">
                            <!-- Users -->
                            <Border Style="{StaticResource StatsCellStyle}">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding userCount}" 
                                               FontSize="20" 
                                               FontWeight="SemiBold" 
                                               Foreground="#CDD6F4"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Users" 
                                               FontSize="12" 
                                               Foreground="#A6ADC8"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Requests -->
                            <Border Style="{StaticResource StatsCellStyle}">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding requestCount}" 
                                               FontSize="20" 
                                               FontWeight="SemiBold" 
                                               Foreground="#CDD6F4"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Requests" 
                                               FontSize="12" 
                                               Foreground="#A6ADC8"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Posts -->
                            <Border Style="{StaticResource StatsCellStyle}">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding postCount}" 
                                               FontSize="20" 
                                               FontWeight="SemiBold" 
                                               Foreground="#CDD6F4"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Posts" 
                                               FontSize="12" 
                                               Foreground="#A6ADC8"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
