<Window x:Class="AdminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        
        <Grid HorizontalAlignment="Center" Height="23" Width="300" Margin="0,140,0,0" VerticalAlignment="Top">
            <TextBox Name="userName" TextWrapping="Wrap" Text="" Background="Transparent" />
            <TextBlock Text="Enter your username" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center"
                       Visibility="{Binding Text, ElementName=userName, Converter={StaticResource StringToVisibilityConverter}}" />
        </Grid>

        
        <Grid HorizontalAlignment="Center" Height="23" Margin="0,170,0,0" VerticalAlignment="Top" Width="300">
            <PasswordBox Name="Password" Password="" Background="Transparent" />
            <TextBlock Text="Enter your password" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center"
                       Visibility="{Binding Password, ElementName=Password, Converter={StaticResource StringToVisibilityConverter}}" />
        </Grid>

        
        <Button Name="signIn" Content="Sign in" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
