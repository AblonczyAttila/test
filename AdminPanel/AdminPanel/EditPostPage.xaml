<Page x:Class="AdminPanel.EditPostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="EditPostPage" Height="450" Width="800">

    <Grid Background="#1E1E2E">
        <!-- Back Button -->
        <Button Content="Back"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Padding="10,5"
                FontSize="12"
                FontWeight="SemiBold"
                Background="#CBA6F7"
                Foreground="#1E1E2E"
                BorderThickness="0"
                Cursor="Hand"
                Click="Back_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#CBA6F7"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#B493F4"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#9D7BEF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Edit Post" FontSize="24" Foreground="#CDD6F4" Margin="0,20,0,20"/>

            <TextBlock Text="Title:" Foreground="#CDD6F4"/>
            <TextBox x:Name="TitleTextBox" Width="400" Margin="0,0,0,10"/>

            <TextBlock Text="Content:" Foreground="#CDD6F4"/>
            <TextBox x:Name="ContentTextBox" Width="400" Height="200" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Click="Save_Click" Margin="10,0,10,0" Padding="10,5" Background="#A6E3A1" Foreground="#1E1E2E"/>
                <Button Content="Cancel" Click="Cancel_Click" Margin="10,0,10,0" Padding="10,5" Background="#F38BA8" Foreground="#1E1E2E"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>